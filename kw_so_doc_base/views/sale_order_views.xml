<odoo>
    <record id="kw_so_doc_base_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form (kw_so_doc_base)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Document requisites">
                    <group>
                        <field name="kw_responsible_person"/>
                        <field name="kw_city_of_assembly"/>
                          <field name="kw_contract"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
